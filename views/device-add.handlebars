 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>DEVICE</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/device"> VIEW DEVICE</a>
          </div>2
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               
              Manage Device
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal" method="post" action="/device/create">
                    {{#if deviceDetails}}
                      <input type="hidden" name="deviceId" value="{{deviceDetails._id}}" />
                    {{/if}}
                   
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Device Name <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="deviceName" name="deviceName"
                        {{#if deviceDetails}}
                         value="{{deviceDetails.deviceName}}" 
                         {{/if}}
                          type="text" required />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="curl" class="control-label col-lg-2">Location <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control " id="location" type="text" name="location"
                          {{#if deviceDetails}}
                         value="{{deviceDetails.location}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Longitude<span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="longitude" name="longitude"  type="text" required 
                          {{#if deviceDetails}}
                         value="{{deviceDetails.cordinates.longitude}}" 
                         {{/if}}
                        />
                      </div>
                    </div>
                     <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Latitude<span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="latitude" name="latitude"  type="text" required 
                          {{#if deviceDetails}}
                         value="{{deviceDetails.cordinates.latitude}}" 
                         {{/if}}
                        />
                      </div>
                    </div>
                
                    
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>