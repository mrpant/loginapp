    <section id="main-content">
      <section class="wrapper">
        <div class="row">
           <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>DEVICE</h3>
           
          </div>
          <div class="col-lg-2">
             <a class="btn btn-primary page-header" href="/device/device-add"> ADD DEVICE</a>
          </div>
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Manage Device
           
              </header>

              <table class="table table-striped table-advance table-hover tables">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Location</th> 
                    <th>Longitude</th>
                    <th>Latitude</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    {{#each deviceList}}
                    <tr>
                    <td>{{math @index "+" 1}}</td>
                    <td>{{deviceName}}</td>
                    <td>{{cordinates.longitude}}</td>
                    <td>{{cordinates.latitude}}</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-success" href="/device/{{_id}}/update-view"><i class="icon_pencil-edit"></i></a>
                        <form style="display: flex;padding-bottom: 1px;" method="post" action="/device/{{_id}}/delete">
                        <button class="btn btn-danger" type="submit"><i class="icon_close_alt2"></i></button>
                        </form>
                      </div>
                    </td>
                  </tr>
                 {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>