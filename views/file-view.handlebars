    <section id="main-content">
      <section class="wrapper">
        <div class="row">
           <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>FILES</h3>
           
          </div>
          <div class="col-lg-2">
             <a class="btn btn-primary page-header" href="/product/{{product_file_Id}}/file-add"> ADD FILES</a>
          </div>
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               Manage Files
              </header>

              <table class="table table-striped table-advance table-hover">
                      <table class="table table-striped table-advance table-hover tables">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>File Name</th>
                    <th>File Type</th>
                    <th>File</th>
                    <th>Size</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  </thead>
                  <tbody>
                 
                   
                    {{#each fileList  }}

                  
                  <tr>
                    <td>{{math @index "+" 1}} </td>
                    <td>{{name}}</td>
                    <td>{{fileType}}</td>
                      <td>
                          {{#if isImage}}
                           <img style="width:100px;height:100px;" src="../../../{{url}}" />
                           {{else}}
                           <video width="100" height="100" controls>
                              <source src="../../../{{url}}" type="video/mp4">
                              Your browser does not support the video tag.
                            </video>
                           {{/if}}
                          
                      </td>
                    <td>{{size}} </td>
                    
                    <td>
                      <div class="btn-group">
                       
                        <a class="btn btn-primary" href="/product/{{productId}}/files-assign/{{_id}}"><i class="icon_document_alt"></i></a>
                       
                        <form style="display: flex;padding-bottom: 1px;" method="post" action="/product/{{_id}}/file-delete">
                        <input type="hidden" name="productId" value="{{productId}}" />
                        <button class="btn btn-danger" type="submit"><i class="icon_close_alt2"></i></button>
                        </form>
                      </div>
                    </td>
                  </tr>
                 {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>