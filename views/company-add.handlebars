 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>COMPANY (Advertiser)</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/company"> VIEW COMPANY</a>
          </div>
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
             Manage  Company
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal"  method="post" action="/company/create">
                  {{#if companyDetails}}
                      <input type="hidden" name="companyId" value="{{companyDetails._id}}" />
                    {{/if}}
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Company Name <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="name" name="name"  type="text" required 
                        {{#if companyDetails}}
                         value="{{companyDetails.name}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cemail" class="control-label col-lg-2">E-Mail <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control " id="email" type="email" name="email" required 
                        {{#if companyDetails}}
                         value="{{companyDetails.email}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="curl" class="control-label col-lg-2">Country</label>
                      <div class="col-lg-10">
                        <input class="form-control " id="country" type="text" name="country" 
                        {{#if companyDetails}}
                         value="{{companyDetails.country}}" 
                         {{/if}}
                        />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Company Location <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="location" name="location"  type="text" required
                        {{#if companyDetails}}
                         value="{{companyDetails.location}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="ccomment" class="control-label col-lg-2">Phone <span class="required">*</span></label>
                      <div class="col-lg-10">
                         <input class="form-control" id="phone" name="phone" maxlength="10"  type="text" required
                         {{#if companyDetails}}
                         value="{{companyDetails.phone}}" 
                         {{/if}}
                          />
                      </div>
                    </div>
                     <div class="form-group ">
                      <label for="ccomment" class="control-label col-lg-2">Company Website <span class="required">*</span></label>
                      <div class="col-lg-10">
                         <input class="form-control" id="website" name="website"  type="url" required 
                         {{#if companyDetails}}
                         value="{{companyDetails.website}}" 
                         {{/if}}
                          />
                      </div>
                     </div>
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>