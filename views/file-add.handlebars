 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>FILES</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/product/{{productId}}/file-view"> VIEW FILES</a>
          </div>
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               Manage Files
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal" method="post" enctype="multipart/form-data" action="/product/{{productId}}/create-files">
                    {{#if fileDetails}}
                      <input type="hidden" name="fileId" value="{{fileDetails._id}}" />
                    {{/if}}
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Upload Multiple Files <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="uploadedImages" name="uploadedImages" type="file"  multiple="multiple" accept="image/*" required/>
                        
                        
                      </div>
                    </div>
                 
                    {{#if fileDetails}}
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2"></label>
                      <div class="col-lg-10"> 
                        <img src="../../../{{fileDetails.url}}" style="height: 100px;width: 200px;" />
                      </div>
                    </div>
                    {{/if}}


                   
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>


   