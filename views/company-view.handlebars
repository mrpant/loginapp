    <section id="main-content">
      <section class="wrapper">
        <div class="row">
           <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>COMPANY (Advertiser)</h3>
           
          </div>
          <div class="col-lg-2">
             <a class="btn btn-primary page-header" href="/company/company-add"> ADD COMPANY</a>
          </div>
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               Manage Company
              </header>

              <table class="table table-striped table-advance table-hover tables">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th> Email</th>
                    <th> Country</th>
                    <th>Location</th>
                     <th>Phone</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    {{#each companyList}}
                  <tr>
                    <td>{{math @index "+"  1}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{country}}</td>
                    <td>{{location}}</td>
                    <td>{{phone}}</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" href="/company/{{_id}}/product-assign-to-company"><i class="icon_genius"></i></a>
                        <a class="btn btn-success" href="/company/{{_id}}/update-view"><i class="icon_pencil-edit"></i></a>
                        <form style="display: flex;padding-bottom: 1px;" method="post" action="/company/{{_id}}/delete">
                        <button class="btn btn-danger" type="submit"><i class="icon_close_alt2"></i></button>
                        </form>
                      </div>
                    </td>
                  </tr>
                 {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>