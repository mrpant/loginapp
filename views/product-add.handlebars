 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>PRODUCTS</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/product"> VIEW PRODUCT</a>
          </div>
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               Manage Product
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal"  method="post" action="/product/create">
                  {{#if productDetails}}
                      <input type="hidden" name="productId" value="{{productDetails._id}}" />
                    {{/if}}
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Product Name <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="name" name="name" type="text" required 
                         {{#if productDetails}}
                         value="{{productDetails.name}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Product Type <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="type" name="type" type="text" 
                        {{#if productDetails}}
                         value="{{productDetails.type}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                  
                    <div class="form-group ">
                      <label for="curl" class="control-label col-lg-2">Ads Location</label>
                      <div class="col-lg-10">
                        <input class="form-control " id="ads_location" type="text" name="ads_location"
                         {{#if productDetails}}
                         value="{{productDetails.ads_location}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Ads Period <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="ads_period" name="ads_period"  type="text" required
                        {{#if productDetails}}
                         value="{{productDetails.ads_period}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                   
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>