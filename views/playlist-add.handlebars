 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>PLAYLISTS</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/playlist"> VIEW PLAYLIST</a>
          </div>
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
               Manage PlayList
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal"  method="post" action="/playlist/create">
                    {{#if playlistDetails}}
                      <input type="hidden" name="playlistId" value="{{playlistDetails._id}}" />
                    {{/if}}
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Playlist Name <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="name" name="name"  type="text" required 
                        {{#if playlistDetails}}
                         value="{{playlistDetails.name}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                   
                    <div class="form-group " style="overflow-y: scroll;height: 400px;overflow-x: hidden;">
               
                        
                       {{#each fileList}}
                      <div class="row" style="    margin-top: 5px;">
                      <label for="cemail" class="control-label col-lg-2">{{name}} <span class="required">*</span></label>
                        
                      <div class="col-lg-3">
                        
                        <input type="checkbox" class="form-control" name="fileId[]" value="{{_id}}" 
                        />
                      </div>
                      <div class="col-lg-7">
                           {{#if isImage}}
                           <img style="width:200px;height:100px;" src="../../{{url}}" />
                           {{else}}
                           <video id="vid" width="200" height="100" controls>
                              <source src="../../{{url}}" type="video/mp4">
                              Your browser does not support the video tag.
                            </video>
                           {{/if}}
                           
                      </div>
                     </div>
                      {{/each}}
                    </div>
                    
                  <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Playlist Size<span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="size" name="size"  type="text" required 
                        {{#if playlistDetails}}
                         value="{{playlistDetails.size}}" 
                         {{/if}}
                        />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Playlist Type <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="playListType"  readonly value="playlist" name="playListType"  type="text" 
                        {{#if playlistDetails}}
                         value="{{playlistDetails.playListType}}" 
                         {{/if}}
                         />
                      </div>
                    </div>
                    <div class="form-group ">
                      <label for="cname" class="control-label col-lg-2">Playlist Duration <span class="required">*</span></label>
                      <div class="col-lg-10">
                        <input class="form-control" id="duration" name="duration" type="text" required 
                        {{#if playlistDetails}}
                         value="{{playlistDetails.duration}}" 
                         {{/if}}
                        />
                      </div>
                    </div>
                  
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>



 