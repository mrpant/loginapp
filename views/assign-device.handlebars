 <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>DEVICE ASSIGN TO PRODUCT</h3>
           
          </div>
          <div class="col-lg-2">
               <a class="btn btn-primary page-header" href="/product"> VIEW DEVICE</a>
          </div>
        </div>
        <!-- Form validations -->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
             
              Assign Device to Product
              </header>
              <div class="panel-body">
                <div class="form">
                  <form class="form-validate form-horizontal" method="post" action="/product/device-assign-update/{{productId}}">
                    {{#each deviceList}}
                    <div class="form-group ">
                    <div class=" col-lg-10 col-lg-offset-2">
                        <label>
                        <input type="checkbox" value="{{_id}}" 
                            
                            {{#if isChecked}}
                                checked
                            {{/if}}
                         name="deviceId[]">
                           {{deviceName}}
                           
                        </label>
                      </div>
                    </div>
                    {{/each}}
                    <div class="form-group">
                      <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-default" type="button">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>