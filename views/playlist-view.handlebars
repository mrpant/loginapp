    <section id="main-content">
      <section class="wrapper">
        <div class="row">
           <div class="col-lg-10">

            <h3 class="page-header"><i class="fa fa-files-o"></i>PLAYLISTES</h3>
           
          </div>
          <div class="col-lg-2">
             <a class="btn btn-primary page-header" href="/playlist/playlist-add"> ADD PLAYLISTE</a>
          </div>
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Advanced Table
              </header>

              <table class="table table-striped table-advance table-hover tables">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Playlist Name</th>
                    <th>Playlist Type</th>
                    <th>Duration</th>
                    <th>Size</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  </thead>
                  <tbody>
                   
                    {{#each playlistList  }}

                  
                  <tr>
                    <td>{{math @index "+" 1}}</td>
                    <td>{{name}}</td>
                    <td>{{playListType}}</td>
                    <td>{{duration}}</td>
                    <td>{{size}}</td>
                    
                    <td>
                      <div class="btn-group">
                       
                       {{!--  <a class="btn btn-primary" href="/playlist/{{_id}}/playlist-assign-to-playlist"><i class="icon_desktop"></i></a> --}}
                      {{!--   <a class="btn btn-success" href="/playlist/{{_id}}/update-view"><i class="icon_pencil-edit"></i></a> --}}
                        <form style="display: flex;padding-bottom: 1px;" method="post" action="/playlist/{{_id}}/delete">
                        <button class="btn btn-danger" type="submit"><i class="icon_close_alt2"></i></button>
                        </form>
                      </div>
                    </td>
                  </tr>
                 {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>